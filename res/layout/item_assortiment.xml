<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#fff">
    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp">
        <ImageView
                android:id="@+id/itemAssortiment_ImageView_img"
                android:background="#1000"
                android:layout_width="108dp"
                android:layout_height="138dp"/>
    </FrameLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="138dp">
        <TextView
                android:text="Ваша свадьба в Ульяновске №1 ()11"
                android:textSize="16sp"
                android:textColor="#000"
                android:ellipsize="end"
                android:maxLines="2"
                android:id="@+id/itemAssortiment_TextView_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"/>

        <TextView
                android:text="Организация свадебного дня - звнятие, безусловно, приятное, но не самое легкое. Вам придется сделать массу вещей и встретится"
                android:textSize="14sp"
                android:textColor="#878787"
                android:maxLines="3"
                android:ellipsize="end"
                android:id="@+id/itemAssortiment_TextView_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        <TextView
                android:id="@+id/itemAssortiment_TextView_btnStatus"
                android:layout_gravity="right"
                android:text="СКАЧАТЬ"
                android:textColor="@color/button_download"
                android:textSize="14dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_download"/>
        <ProgressBar
                android:visibility="gone"
                android:id="@+id/itemAssortiment_ProgressBar_load"
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>